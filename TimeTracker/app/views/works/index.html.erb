<h1>All Works</h1>
<p>
  <%= @works.inspect %>
</p>

<div>
  <ul>
    <% @works.each do |work| %>
      <li>
        Work for
        <%= work.project.company.name %>
        Performed on
        <%= work.date_performed.to_formatted_s(:long) %>
        |
        <span><%= link_to 'Show', work_path(work) %></span>
      </li>
    <% end %>
  </ul>
</div>