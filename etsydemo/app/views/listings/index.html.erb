<div class="center">
  <p id="notice"><%= notice %></p>

  <h1>All Listings</h1>

  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url(:medium)), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= listing.description %> for <span class="listing-price"><%= number_to_currency(listing.price) %></span></p>
            <p><span><%= link_to 'Show', listing, class: 'btn btn-link' %></span> | <span><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %></span> | <span><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
</div>
