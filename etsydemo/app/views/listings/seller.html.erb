<div class="center">
  <p id="notice"><%= notice %></p>

  <h1>My Items</h1>

  <div class="row">
    <% if @listings.count == 0 %>
      <p>No items for sale</p>
    <% else %>
      <% @listings.each do |listing| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%= link_to image_tag(listing.image.url(:medium)), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= listing.description %> for <span class="listing-price"><%= number_to_currency(listing.price) %></span></p>
              <p><%= time_ago_in_words(listing.created_at) %></p>
              <% if user_signed_in? && current_user == listing.user %>
                <p><span><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %></span> | <span><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></span></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Total</h3>
          </div>
          <div class="panel-body">
            <h4>For Sale</h4>
            <span><%= number_to_currency(@total_listings) %></div></span>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
</div>
