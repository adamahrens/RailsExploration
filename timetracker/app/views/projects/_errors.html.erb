<% if @project.errors.any? %>
  <div>
    <p>Please correct the following <%= pluralize(@project.errors.count, "error") %></p>
    <ul>
      <% @project.errors.full_messages.each do |error_message| %>
        <li>
          <%= error_message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
