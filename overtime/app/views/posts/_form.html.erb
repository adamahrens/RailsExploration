<%= form_for @post, class: 'form' do |form| %>

  <div class="form-group">
    <%= form.label :date %>:
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rationale %>:
    <%= form.text_area :rationale, class: 'form-control' %>
  </div>

  <%= form.submit 'Save', class: 'btn btn-default' %>
<% end %>
