<h1>Overtime Requests</h1>
<table class="table">
  <thead>
  	<tr>
  		<th>
  			Rationale
  		</th>
  		<th>
  			Requested
  		</th>
      <th>
  			Requester
  		</th>
  	</tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= truncate(post.rationale) %></td>
        <td><%= time_ago_in_words(post.date) %></td>
        <td><%= post.user.last_name %>, <%= post.user.first_name %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
