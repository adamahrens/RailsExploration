<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table class="table table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @listings.each do |listing| %>
        <tr>
            <td><%= image_tag listing.avatar.url(:thumb) %></td>
            <td><%= listing.name %></td>
            <td><%= listing.description %></td>
            <td><%= listing.price %></td>
            <td>
                <%= link_to 'Show', listing, class: 'btn btn-link' %>
                <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %>
                <%= link_to 'Destroy', listing, class: 'btn btn-link', method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-primary' %>
