<%= form_with(model: portfolio, local: true) do |form| %>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, id: :portfolio_image, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :thumbnail %>
      <%= form.file_field :thumbnail, id: :portfolio_thumbnail, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-8">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, id: :portfolio_body, class: 'form-control', rows: 12 %>
    </div>
  </div>
</div>

  <hr  />
  <div class="form-group">
    <h3>Technologies</h3>
    <ul>
      <%= form.fields_for :technologies do |technology_form| %>
        <li>
          Technology: <%= technology_form.text_field :name %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="form-group">
    <%= form.submit submit_button, class: 'form-control btn btn-primary' %>
  </div>
<% end %>
