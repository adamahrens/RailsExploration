<h1>Portfolio</h1>

<%= link_to 'New Portfolio', new_portfolio_path %>

<% @portfolios.each do |portfolio| %>
  <div>
    <h2><%= link_to portfolio.title, portfolio %></h2>
    <h4><%= portfolio.subtitle %></h4>
    <p>
      <%= portfolio.body %>
    </p>
    <% unless portfolio.thumbnail.nil? %>
      <%= image_tag(portfolio.thumbnail) %>
    <% end %>
    <div>
      <%= link_to 'Edit', edit_portfolio_path(portfolio) %>
    </div>
    <hr  />
  </div>
<% end %>
