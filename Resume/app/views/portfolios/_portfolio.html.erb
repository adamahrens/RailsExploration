<div class="col-md-4" >
  <div class="card mb-4 box-shadow" data-id="<%= portfolio.id %>">
    <% unless portfolio.thumbnail.nil? %>
      <%= image_tag portfolio.thumbnail, class: 'card-img-top', alt: 'Card Image' %>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= portfolio.title %></p>
      <p class="card-text"><%= portfolio.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to 'View', show_portfolio_path(portfolio), class: 'btn btn-sm btn-outline-secondary' %>
          <% if logged_in?(:site_admin) %>
            <%= link_to 'Edit', edit_portfolio_path(portfolio), class: 'btn btn-sm btn-outline-secondary'  %>
            <%= link_to 'Delete', portfolio, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-secondary' %>
          <% end %>
        </div>
        <small class="text-muted"><%= time_ago_in_words(portfolio.created_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
