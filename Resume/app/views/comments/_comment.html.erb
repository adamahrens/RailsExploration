<div class="comment-card blog-spacer">
  <div class="row">
      <div class="col-md-2">
        <%= gravatar_helper(comment.user, 64) %>
      </div>
      <div class="col-md-10">
        <p>
            <%= comment.content %>
        </p>
        <p class="authored">
          Comment posted <%= time_ago_in_words comment.created_at %> ago by <%= comment.user.name %>
          </p>
      </div>
  </div>
</div>
