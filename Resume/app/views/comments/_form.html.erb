<% unless current_user.is_a? GuestUser %>
  <%= form_for comment, id: 'new_comment', url: '#' do |form| %>
    <div class="form-group">
      <%= form.label :content, 'Comment' %>
      <%= form.text_area :content, id: 'comment_content', class: 'form-control', rows: 3, placeholder: 'Add your comment' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Submit Comment', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% else %>
<p>
  Login to add your own comments
  </p>
<% end %>
