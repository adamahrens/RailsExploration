<div class="circumspection">
  <% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: 'Alert!'), image: :warning %>
  <% elsif flash[:notice] %>
    <%= js add_gritter(flash[:notice], title: 'Notice!', image: :notice) %>
  <% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: 'Error!', image: :error) %>
  <% end %>
</div>
