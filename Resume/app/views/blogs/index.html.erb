<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"><%= @featured.title %></h1>
    <p class="lead my-3"><%= truncate(@featured.body, length: 100) %></p>
    <p class="lead mb-0"><%= link_to 'Continue reading...', @featured, class: 'text-white font-weight-bold' %></p>
  </div>
</div>

<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-3 mb-4 font-italic border-bottom">From the Firehose</h3>
      <%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' if logged_in?(:site_admin) %>
      <%= render partial: @blogs, spacer_template: 'blog_spacer' %>
      <%= paginate @blogs %>
    </div>

    <%= render 'shared/blog_sidebar', topics: @topics %>
  </div>
</main>