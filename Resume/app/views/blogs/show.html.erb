<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-3 mb-4 font-italic border-bottom"><%= @blog.title %></h3>
      <p>
        Topic: <%= @blog.topic.title %>
      </p>
      <p>
        <strong>Body:</strong>
        <%= @blog.body %>
      </p>

      <!-- Start of Comment Form -->
      <%= render 'comments/form', comment: @comment %>

      <!-- Start of All comments -->
      <div id="comments" data-blog-id="<%= @blog.id %>">
        <%= render @blog.comments %>
      </div>

      <div class="show-navigation-links">
        <% if logged_in?(:site_admin) %>
          <%= link_to 'Edit', edit_blog_path(@blog) %> |
        <% end %>
        <%= link_to 'Back', blogs_path %>
      </div>

    </div>
    <%= render 'shared/blog_sidebar' %>
  </div>
</main>
