<%# class="success" %>
<tr>
  <td>
    <%= time_off.id %>
  </td>
  <td>
    <%= status_span(time_off) %>
  </td>
  <td>
    <%= time_ago_in_words(time_off.date) %>
  </td>
  <td>
    <%= time_off.user.full_name %>
  </td>
  <td>
    <%= link_to time_off.rationale, time_off_path(time_off) %>
  </td>
  <td>
    <%= time_off.overtime_request %>
  </td>
  <td>
    <% if policy(time_off).update? %>
    <%= link_to '', edit_time_off_path(time_off), class: 'glyphicon glyphicon-pencil', id: "edit_#{time_off.id}" %>
    <%= link_to '', time_off_path(time_off), class: 'glyphicon glyphicon-trash', id: "delete_#{time_off.id}", method: :delete %>
    <% end %>
  </td>
</tr>
