<!DOCTYPE html>
<html>
  <head>
    <title>Scheduler</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if Rails.env.development? %>
    <%= render 'peek/bar' %>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'partials/navigation-bar' %>
          <%= yield %>
        </div>
      </div>
    </div>

    <%= js add_gritter(flash[:notice], title: 'Time Off Notification', sticky: false, time: 3000) %>
  </body>
</html>
